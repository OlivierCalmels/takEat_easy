<div class="container">
  <h1>Modifiez votre compte</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :first_name, label: 'PrÃ©nom' %>
    <%= f.input :last_name, label: 'Nom' %>
    <%= f.input :address,label: 'Adresse' %>
    <%= f.input :password,
                hint: "Vous pouvez laisser le champ vide",
                required: false,
                input_html: { autocomplete: "new-password" }, label: 'Mot de passe'  %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password" }, label: 'Confirmation de mot de passe'  %>
    <%= f.input :current_password,
                hint: "Nous avons besoin de votre mot de passe actuel pour confirmer votre changement",
                required: true,
                input_html: { autocomplete: "current-password" },label: 'Votre mot de passe actuel' %>
    <%= f.input :num_of_members, as: :integer,label: 'Combien de personnes dans votre foyer?'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Confirmer mes modifications", class: 'btn-main', style:"width: 100%; margin-bottom:30px" %>
  </div>
<% end %>

<%= link_to "Effacer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
</div>
